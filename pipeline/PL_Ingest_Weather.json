{
	"name": "PL_Ingest_Weather",
	"properties": {
		"activities": [
			{
				"name": "LoopCities",
				"type": "ForEach",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@variables('CityList')",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "Get_Weather",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "RestSource",
									"httpRequestTimeout": "00:01:40",
									"requestInterval": "00.00:00:00.010",
									"requestMethod": "GET",
									"additionalHeaders": {
										"Accept-Encoding": "identity"
									},
									"paginationRules": {
										"supportRFC5988": "true"
									}
								},
								"sink": {
									"type": "JsonSink",
									"storeSettings": {
										"type": "AzureBlobFSWriteSettings"
									},
									"formatSettings": {
										"type": "JsonWriteSettings"
									}
								},
								"enableStaging": false
							},
							"inputs": [
								{
									"referenceName": "DS_OpenMeteo_Weather",
									"type": "DatasetReference",
									"parameters": {
										"Lat": {
											"value": "@{item().lat}",
											"type": "Expression"
										},
										"Lon": {
											"value": "@{item().lon}",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "DS_ADLS_Bronze_Weather",
									"type": "DatasetReference",
									"parameters": {
										"CityCode": {
											"value": "@{item().city}",
											"type": "Expression"
										}
									}
								}
							]
						}
					]
				}
			}
		],
		"variables": {
			"CityList": {
